generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
  AUTHOR
  SUPERADMIN
}

model User {
  id              String        @id @default(uuid())
  email           String        @unique
  name            String?
  password        String
  createdAt       DateTime      @default(now())
  role            Role          @default(USER)
  updatedAt       DateTime      @updatedAt
  blogs           Blog[]
  isSubscriber    Boolean       @default(false)
  subscriberToken String?       @unique
  likes           Like[]
  mediaReviews    MediaReview[]
}

model Blog {
  id        String   @id @default(uuid())
  title     String
  content   String
  authorId  String?  // ⚠️ MADE OPTIONAL - this is the key change
  author    User?    @relation(fields: [authorId], references: [id])
  bannerUrl String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ⚠️ Keep Admin table temporarily for data migration
model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  itemId    String
  itemType  String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  
  @@unique([userId, itemId, itemType])
}

model MediaReview {
  id        String   @id @default(uuid())
  title     String
  type      String
  content   String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  rating    Int
  bannerUrl String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OTP {
  id          String   @id @default(uuid())
  email       String
  otp_hash    String
  purpose     String
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  attempts    Int      @default(0)
  maxAttempts Int      @default(3)
  is_used     Boolean  @default(false)
}